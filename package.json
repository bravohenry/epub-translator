{
  "name": "epub-translator",
  "version": "1.0.0",
  "description": "ePub双语翻译工具",
  "author": {
    "name": "Henry",
    "email": "henry@example.com"
  },
  "main": "src/main/main.js",
  "scripts": {
    "start": "concurrently \"npm run start:vite\" \"npm run start:electron\"",
    "start:vite": "vite",
    "start:electron": "wait-on tcp:5173 && cross-env NODE_ENV=development electron .",
    "build": "npm run build:vite && electron-builder",
    "build:vite": "vite build",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "create-icon": "scripts/create-icns.sh"
  },
  "build": {
    "appId": "com.epubtranslator.app",
    "productName": "ePub Translator",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg"
      ],
      "icon": "public/icon.icns"
    },
    "dmg": {
      "title": "ePub Translator",
      "icon": "public/icon.icns",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "dist/**/*",
      "src/main/**/*",
      "translate_epub.py"
    ]
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.1.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "postcss-import": "^16.1.0",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.6",
    "wait-on": "^7.2.0"
  }
}
